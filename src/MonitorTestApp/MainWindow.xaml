<Window x:Class="MonitorTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitorTestApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="95" Width="190">
	<StackPanel>
		<DockPanel LastChildFill="False">
            <TextBlock x:Name="CursorXTextBlock" Width="50"/>
            <TextBlock x:Name="CursorYTextBlock" Width="50"/>
		</DockPanel>
		<DockPanel LastChildFill="False">
			<TextBlock x:Name="MonitorXTextBlock" Width="50"/>
			<TextBlock x:Name="MonitorYTextBlock" Width="50"/>
			<TextBlock x:Name="MonitorWTextBlock" Width="50"/>
			<TextBlock x:Name="MonitorHTextBlock" Width="50"/>
		</DockPanel>
	</StackPanel>
</Window>
